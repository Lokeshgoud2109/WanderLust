<div class="row">

  <% for(let listing of allListings) { %>
    <div class="col-12 col-md-4 mb-4">
      <a href="/listings/<%= listing._id %>" style="text-decoration:none; color:inherit;">
        <div class="card h-100  listing-card">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="">
          <!-- <div class="card-img-overlay">book as soon as possible</div> -->
          <div class="card-body">
            <p class="card-text">
              <%= listing.title %><br>
              â‚¹<%= listing.price.toLocaleString("en-IN") %>/night
              <i class="tax-info">&nbsp &nbsp &nbsp +18% GST</i>
            </p>
          </div>
        </div>
      </a>
    </div>
  <% } %>

</div>

<script>
  let taxSwitch = document.getElementById("reverseCheck1");

  taxSwitch.addEventListener("change", () => {
    let taxInfos = document.getElementsByClassName("tax-info");

    for (let tax of taxInfos) {
      if (taxSwitch.checked) {
        tax.style.display = "inline";
      } else {
        tax.style.display = "none";
      }
    }
  });
</script>

